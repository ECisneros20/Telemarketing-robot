<?xml version="1.0" encoding="UTF-8"?>
<launch>

  <!-- Gazebo world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="paused" value="true"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="recording" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <!-- Robot model -->
  <param name="robot_description" command="$(find xacro)/xacro --inorder '$(find telemarketing_description)/urdf/telemarketing.xacro'" />

  <!-- Spawn the robot model -->
  <node name="movil" pkg="gazebo_ros" type="spawn_model" output="screen" args="-urdf -param robot_description -model telemarket -z 2.0" />
  
  <!-- Load controllers -->
  <rosparam file="$(find telemarket_description)/config/joints.yaml" command="load" />

  <!-- Controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" ns="/telemarket"
        args="joint_state_controller"/>

  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
        respawn ="false" output="screen" >
    <remap from="/joint_states" to="/telemarket/joint_states" />
  </node>

  <!-- Visualization of the robot using Rviz 
  <node pkg="rviz" type="rviz" name="rviz" required="true" args="-d $(find telemarket_description)/rviz/telemarket.rviz"/>-->

  <!-- TF Transform Broadcaster 
  <node pkg="telemarket_gazebo" type="telemarket_tf_broadcaster.py" name="telemarket_tf_broadcaster"/>-->

</launch>
